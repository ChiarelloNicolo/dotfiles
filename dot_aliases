alias zshconfig="lvim ~/.zshrc"
alias ohmyzsh="lvim ~/.oh-my-zsh"
alias i3config="lvim ~/.config/i3/config"
alias polybarconfig="lvim ~/.config/polybar/"
alias starshipconfig="lvim ~/.config/starship.toml"
alias lvimconfig="lvim ~/.config/lvim/config.lua"
alias aliases="lvim $HOME/.aliases"
alias screenshot="scrot ~/Screenshots/%Y-%m-%d-%T-screenshot.png"
alias ls='lsd'
alias la='lsd -A'
alias l='lsd -F'
alias ll='lsd -alF'
alias grep='grep --color=auto'
alias cp='cp -i'
alias rm='rm -i'
alias mv='mv -i'
alias ..='cd ..'
alias td='tmux detach'
alias tw='tmux new-window'
alias tkw='tmux kill-window'
alias parupg='paru -Syu'
alias parin='paru -S'
alias parrem='paru -Rns'
alias c=clear
alias sudo="doas"
alias snapshots="swallow doas timeshift-gtk"
alias sudoedit="doas nvim"

