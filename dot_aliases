alias screenshot="scrot ~/Screenshots/%Y-%m-%d-%T-screenshot.png"
alias ls='lsd'
alias la='lsd -A'
alias l='lsd -F'
alias ll='lsd -alF'
alias grep='grep --color=auto'
alias cp='cp -i'
alias rm='rm -i'
alias mv='mv -i'
alias ..='cd ..'
alias td='tmux detach'
alias tw='tmux new-window'
alias tkw='tmux kill-window'
alias parupg='paru -Syu'
alias parin='paru -S'
alias parrem='paru -Rns'
alias c=clear
alias sudo="doas"
alias snapshots="swallow doas timeshift-gtk"
alias sudoedit="doas nvim"
alias lxappearance="swallow doas lxappearance"
alias vimdiff="nvim -d"
alias dotfiles="lvim -f $HOME/.local/share/chezmoi/"
